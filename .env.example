# SOCC Dashboard Configuration
# Copy this file to .env and fill in your values

# Server
PORT=3141
NODE_ENV=production

# Frontend URL (for CORS in production)
ALLOWED_ORIGINS=http://localhost:3141

# Refresh intervals (milliseconds, minimum 300000 = 5 minutes)
REFRESH_INTERVAL_MS=300000

# Caddy / Reverse Proxy
DOMAIN=socc.example.com

# Optional: Telegram briefing bot
# TELEGRAM_BOT_TOKEN=
# TELEGRAM_CHAT_ID=

# ── Authentication (Phase 4) ──
# Set to "true" to require login. When false/unset, dashboard is open.
# SOCC_AUTH_ENABLED=true

# Admin credentials (required when SOCC_AUTH_ENABLED=true)
# SOCC_ADMIN_USER=admin
# SOCC_ADMIN_PASS=changeme

# JWT signing secret (auto-generated if not set, but set for persistence across restarts)
# SOCC_JWT_SECRET=your-random-secret-here

# ── Briefings ──
# Weather location for morning briefings (used with wttr.in)
SOCC_WEATHER_LOCATION=Greenacres+FL
